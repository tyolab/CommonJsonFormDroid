<resources>

    <style name="AppStyle"></style>

    <style name="AppStyle.Form">

    </style>

    <style name="AppStyle.Form.FieldTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppStyle.Form.Row">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/form_row_padding_left</item>
        <item name="android:paddingRight">@dimen/form_row_padding_right</item>
        <item name="android:paddingTop">@dimen/form_row_padding_top</item>
        <item name="android:paddingBottom">@dimen/form_row_padding_bottom</item>
        <!--
        <item name="android:background">@android:color/transparent</item>
        -->
    </style>


    <style name="AppStyle.Form.Spinner.MaterialSpinner">
        <!--
        app:ms_typeface="font/Roboto-Regular.ttf</item>
        <item name="ms_arrowColor">@color/colorPrimaryDark</item>
        <item name="ms_multiline">false</item>
        <item name="ms_arrowSize">16dp</item>
        <item name="ms_alignLabels">true</item>
        <item name="ms_floatingLabelColor">@color/secondary_text</item>
        -->
    </style>

    <style name="AppStyle.Form.Spinner.MaterialEditText">
        <!--
        app:ms_typeface="font/Roboto-Regular.ttf</item>
        <item name="ms_arrowColor">@color/colorPrimaryDark</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelText"></item>
        <item name="met_singleLineEllipsis">true</item>
        -->
        <item name="textSize">@dimen/form_default_text_size</item>

    </style>
    <style name="AppStyle.Form.Spinner"></style>

    <style name="AppStyle.Form.Spinner.EditText">
        <item name="android:textSize">@dimen/form_default_text_size</item>
    </style>

    <style name="AppStyle.Form.Group">

    </style>

    <style name="AppStyle.Form.Separator">
        <item name="android:background">@color/colorFormFieldSeparator</item>

        <!--
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_default_separator_height</item>
        -->

        <item name="android:minHeight">1dp</item>

        <item name="android:layout_marginLeft">@dimen/form_default_separator_padding_left</item>
        <item name="android:layout_marginRight">@dimen/form_default_separator_padding_right</item>

    </style>

    <style name="AppStyle.Form.EditText">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppStyle.Form.GroupDivider">
        <item name="android:minHeight">@dimen/form_default_group_gap_height</item>
    </style>

    <style name="AppStyle.Form.Main">
        <!--
        <item name="android:padding">8dp</item>
        -->
    </style>

    <style name="AppStyle.Form.GroupTitle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/form_default_separator_padding_left</item>
    </style>

    <style name="AppStyle.Form.Button">
        <!--
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        -->

        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppStyle.Form.LabelField">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppStyle.Form.FieldStyle">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="AppStyle.Form.TitleStyle">
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="AppStyle.Form.FieldStyle.AlignLeft">
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>

    <style name="AppStyle.Form.FieldStyle.AlignRight">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>

    <style name="AppStyle.Form.ImageField"></style>

    <style name="AppStyle.Form.Footer">
        <item name="android:minHeight">@dimen/form_default_footer_height</item>
    </style>

    <style name="AppStyle.Form.Header">
        <item name="android:minHeight">@dimen/form_default_header_height</item>
    </style>

    <style name="AppStyle.Form.Switch">
        <!--
            setup switch text style if want to have it
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        -->
    </style>

    <style name="AppStyle.Form.CompoundButton">
        <!--
            android:layout_marginBottom="@dimen/extra_bottom_margin"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
        -->
    </style>

    <style name="AppStyle.Form.CompoundButtonTitle"></style>

</resources>
