<?xml version="1.0" encoding="utf-8"?>
<au.com.tyo.json.android.views.FormRowTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/form_row_title"
    android:layout_gravity="center_vertical"
    >
    <TextView
        android:id="@android:id/text1"
        android:gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_gravity="center_vertical|left"
        android:ellipsize="end"
        style="@style/AppStyle.Form.FieldTitle"
        />
    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_gravity="left"
        android:text="subtitle"
        style="@style/AppStyle.Form.FieldSubTitle"
        android:visibility="visible"
        />
</au.com.tyo.json.android.views.FormRowTitle>